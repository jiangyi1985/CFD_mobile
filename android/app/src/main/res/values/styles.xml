<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/title_blue</item>
    </style>

    <style name="navigation_icon">
        <!--<item name="android:background">@drawable/style_navigation_radio</item>-->
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <!--<item name="android:duplicateParentState">true</item>-->
    </style>

    <style name="navigation_text">
        <!--<item name="android:background">@drawable/style_navigation_radio</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/tab_main_text_selector</item>
        <item name="android:textSize">12dip</item>
        <!--<item name="android:duplicateParentState">true</item>-->
    </style>

    <style name="ThemeOverlay.ActionBar.TradeHero" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TradeHero.Dashboard.ActionBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.ActionBar.TradeHero</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="stock_edit_checkbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/stock_edit_checkbox</item>
    </style>

</resources>
